<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.apptitive.btmusicplayer.BluetoothActivity$BluetoothFragment">

    <Button
        android:id="@+id/btn_start_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_bluetooth" />

    <TextView
        android:id="@+id/textView_paired_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_below="@id/btn_start_bluetooth"
        android:text="@string/label_paired_devices" />

    <Spinner
        android:id="@+id/spinner_paired_devices"
        android:layout_below="@id/btn_start_bluetooth"
        android:layout_toRightOf="@id/textView_paired_devices"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_server"
        android:layout_below="@id/spinner_paired_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_server" />

    <Button
        android:id="@+id/btn_client"
        android:layout_below="@id/spinner_paired_devices"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_client" />

</RelativeLayout>
